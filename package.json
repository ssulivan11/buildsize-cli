{
  "name": "buildsize-cli",
  "version": "1.1.1",
  "description": "file size check for cli",
  "author": "Scott Sullivan",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ssulivan11/buildsize-cli.git"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "bin": {
    "buildsize-cli": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "test": "npm run test:unit && npm run check:valid && npm run check:invalid",
    "test:unit": "jest --coverage",
    "check:valid": "tsc && ts-node __mocks__/scripts.ts -- valid",
    "check:invalid": "tsc && ts-node __mocks__/scripts.ts -- invalid",
    "lint": "eslint '*/**/*.{js,ts}'",
    "lint:fix": "eslint '*/**/*.{js,ts}' --fix",
    "format": "prettier . --write --ignore-path .gitignore",
    "prepublish": "tsc"
  },
  "lint-staged": {
    "**/*.{ts,js}": [
      "eslint --fix"
    ],
    "*.{ts,js,md,json}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test"
    }
  },
  "dependencies": {
    "brotli-size": "^4.0.0",
    "bytes": "^3.1.0",
    "chalk": "^4.0.0",
    "commander": "^5.1.0",
    "cosmiconfig": "^6.0.0",
    "gzip-size": "^5.1.1",
    "node-emoji": "^1.10.0",
    "prettier": "^2.0.5"
  },
  "devDependencies": {
    "@types/jest": "^25.2.3",
    "@types/node": "^14.0.6",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^3.0.2",
    "eslint": "^7.1.0",
    "eslint-config-airbnb-typescript": "^7.2.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.7",
    "shelljs": "^0.8.4",
    "ts-jest": "^26.1.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.3"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "preset": "ts-jest",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageDirectory": "reports/coverage"
  }
}
